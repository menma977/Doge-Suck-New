<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Black"
        tools:context=".content.bot.MartiAngelActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.anychart.AnyChartView
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/username"
                android:textColor="@color/textPrimary"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/balanceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/balance"
                    android:textColor="@color/textPrimary"/>

            <TextView
                    android:id="@+id/targetTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/target"
                    android:textColor="@color/textPrimary"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/starterLinearLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/percentEditText"
                    android:text="@string/probability"
                    android:textAlignment="center"
                    android:textColor="@color/textPrimary"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <EditText
                        android:id="@+id/probabilityEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/Danger"
                        android:ems="10"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:maxLength="2"
                        android:textAlignment="center"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/textSecondary"
                        tools:ignore="LabelFor"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="@string/percent"
                        android:textColor="@color/textPrimary"/>

            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/percentEditText"
                    android:text="@string/multy_play"
                    android:textAlignment="center"
                    android:textColor="@color/textPrimary"/>

            <EditText
                    android:id="@+id/multiPlayEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Danger"
                    android:ems="10"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:labelFor="@id/percentTextView"
                    android:maxLength="3"
                    android:textAlignment="center"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/textSecondary"
                    tools:ignore="LabelFor"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/percentEditText"
                    android:text="@string/size"
                    android:textAlignment="center"
                    android:textColor="@color/textPrimary"/>

            <EditText
                    android:id="@+id/sizeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Danger"
                    android:ems="10"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:labelFor="@id/percentTextView"
                    android:maxLength="3"
                    android:textAlignment="center"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/textSecondary"
                    tools:ignore="LabelFor"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/percentEditText"
                    android:text="@string/stop_lose"
                    android:textAlignment="center"
                    android:textColor="@color/textPrimary"/>

            <EditText
                    android:id="@+id/stopLoseEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Danger"
                    android:ems="10"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:textAlignment="center"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/textSecondary"
                    tools:ignore="LabelFor"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/percentEditText"
                    android:text="@string/target"
                    android:textAlignment="center"
                    android:textColor="@color/textPrimary"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <EditText
                        android:id="@+id/targetEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/Danger"
                        android:ems="10"
                        android:digits="1234567"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:maxLength="3"
                        android:textAlignment="center"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/textSecondary"
                        tools:ignore="LabelFor"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="@string/percent"
                        android:textColor="@color/textPrimary"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/StarterButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_danger"
                        android:text="@string/suck"/>

                <Button
                        android:id="@+id/StopButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_danger"
                        android:text="@string/stop"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>